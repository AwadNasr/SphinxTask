@page
@model SphinxTask.Pages.Client.UpdateModel
@{
}
<h2>Update Client</h2>

<form method="post">
    <input type="hidden" asp-for="Client.Id" />
    

    <div class="form-group">
        <label asp-for="Client.Name" class="control-label"></label>
        <input asp-for="Client.Name" class="form-control" />
        <span asp-validation-for="Client.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Client.Code" class="d-inline" ></label>     
        <p class=" text-success h5 d-inline">@Model.Client.Code</p>
        <input asp-for="Client.Code" hidden class="form-control" />   
    </div>
    <div class="form-group">
        <label asp-for="Client.Class" class="control-label"></label>
        <select asp-for="Client.Class" class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
        </select>
        <span asp-validation-for="Client.Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Client.State" class="control-label"></label>
        <select asp-for="Client.State" class="form-control">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="Client.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-warning my-2" /> |
        <a class="btn btn-info" asp-page="Index">Back to List</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
