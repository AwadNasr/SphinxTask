@page
@model SphinxTask.Pages.ClientProduct.CreateModel
@{
}
<h1>Add Client Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="ClientProduct.ProductId" class="control-label">Product</label>
        <select asp-for="ClientProduct.ProductId" class="form-control" asp-items="Model.ActiveProducts"></select>
        <span asp-validation-for="ClientProduct.ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientProduct.StartDate" class="control-label">Start Date</label>
        <input asp-for="ClientProduct.StartDate" class="form-control" type="date"/>
        <span asp-validation-for="ClientProduct.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientProduct.EndDate" class="control-label">End Date</label>
        <input asp-for="ClientProduct.EndDate" class="form-control" type="date" />
        <span asp-validation-for="ClientProduct.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientProduct.License" class="control-label">License</label>
        <input asp-for="ClientProduct.License" class="form-control" />
        <span asp-validation-for="ClientProduct.License" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ClientProduct.ClientId" />
    <button type="submit" class="btn btn-success text-black my-2">Add</button> | 
    <a class="btn btn-info my-2" asp-page="/Client/Index">Back to List</a>
    @* < a asp-page="Details" asp-route-id="@Model.ClientProduct.ClientId" class="btn btn-secondary">Cancel</a>  *@
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
